<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
        <KeyFrameSet></KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/LayoutCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardFrom"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/LayoutCardFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardFrom"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardTitle" />
        <Constraint
            android:id="@+id/LayoutCardAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardText"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardFrom" />
        <Constraint
            android:id="@+id/LayoutCardImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardText" />
        <Constraint
            android:id="@+id/LayoutCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/LayoutCardImage" />
    </ConstraintSet>


    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/LayoutCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardFrom"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardTitle" />
        <Constraint
            android:id="@+id/LayoutCardFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardFrom"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/LayoutCardAvatar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardText"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardFrom" />
        <Constraint
            android:id="@+id/LayoutCardImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            motion:layout_constraintBottom_toTopOf="@id/LayoutCardName"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/LayoutCardText" />
        <Constraint
            android:id="@+id/LayoutCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/LayoutCardImage" />
    </ConstraintSet>
</MotionScene>